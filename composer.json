{
    "name": "royallthefourth/quicklist",
    "description": "A simple mailing list manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Royall Spence",
            "email": "royall@royall.us"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "gilbitron/easycsrf": "^1.0",
        "nikic/fast-route": "^1.2",
        "phpmailer/phpmailer": "^5.2",
        "rdlowrey/auryn": "^1.4",
        "respect/validation": "^1.1",
        "robmorgan/phinx": "^0.8.0",
        "royallthefourth/smooth-pdo": "^1.0",
        "symfony/console": "^3.2",
        "symfony/yaml": "^3.2",
        "zendframework/zend-diactoros": "^1.3"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.6",
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "RoyallTheFourth\\QuickList\\": "src"
        },
        "files": [
            "src/Db/Delivery.php",
            "src/Db/MailingList.php",
            "src/Db/Message.php",
            "src/Db/User.php",
            "src/Layout/Partial.php",
            "src/Route/Base.php",
            "src/Route/Contact.php",
            "src/Route/Delivery.php",
            "src/Route/Message.php",
            "src/Route/MailingList.php",
            "src/Common.php",
            "src/Delivery.php",
            "src/MailingList.php",
            "src/Message.php",
            "src/Route.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RoyallTheFourth\\QuickList\\Tests\\": "tests"
        }
    }
}
